<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context="com.djit.apps.fakeproject.MainActivity">

    <TextView
        android:id="@+id/activity_main_tv_bulb_voltage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/activity_main_tv_bulb_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/activity_main_tv_bulb_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/main_activity_btn_turn_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/turn_on" />

    <Button
        android:id="@+id/main_activity_btn_turn_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/turn_off" />

    <Button
        android:id="@+id/main_activity_btn_voltage_up"
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:text="@string/voltage_up" />

    <Button
        android:id="@+id/main_activity_btn_voltage_down"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:text="@string/voltage_down" />

    <Button
        android:id="@+id/main_activity_red_up"
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:text="@string/red_up" />

    <Button
        android:id="@+id/main_activity_red_down"
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:text="@string/red_down" />

    <Button
        android:id="@+id/main_activity_green_up"
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:text="@string/green_up" />

    <Button
        android:id="@+id/main_activity_green_down"
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:text="@string/green_down" />

    <Button
        android:id="@+id/main_activity_blue_up"
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:text="@string/blue_up" />

    <Button
        android:id="@+id/main_activity_blue_down"
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:text="@string/blue_down" />

</LinearLayout>
